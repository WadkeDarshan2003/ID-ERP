rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ============ USERS COLLECTION ============
    // Allow users to create their own document during signup
    // Also allow if writing to their own UID (e.g., from secondary auth context)
    match /users/{userId} {
      allow create: if request.auth.uid == userId;
      allow create: if request.auth != null && request.auth.uid == userId; // Redundant but explicit
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // ============ ADMINS COLLECTION ============
    // Allow creating admin document during signup
    // Also allow if admin is creating another admin (tenantId match) or creating self
    match /admins/{adminId} {
      allow create: if request.auth.uid == adminId;
      allow create: if request.auth != null && request.auth.token.tenantId == request.resource.data.tenantId && request.auth.token.role == 'admin';
      allow read, write: if request.auth != null && request.auth.uid == adminId;
      allow read: if request.auth != null && request.auth.token.tenantId == resource.data.tenantId;
    }
    
    // ============ TENANTS COLLECTION ============
    // Allow creating tenant during admin signup
    match /tenants/{tenantId} {
      allow create: if request.auth != null;
      allow read, write: if request.auth != null && request.auth.token.tenantId == tenantId;
    }
    
    // ============ TENANT-BASED ACCESS ============
    // All data under tenants/{tenantId} path (projects, vendors, etc.)
    match /tenants/{tenantId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.token.tenantId == tenantId;
    }
    
    // ============ TOP-LEVEL COLLECTIONS ============
    // Projects, Vendors, Designers, Clients and all subcollections
    match /projects/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    match /vendors/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    match /designers/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    match /clients/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    match /financialRecords/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // ============ DEFAULT FALLBACK ============
    // Catch all other collections
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}